{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "installCommand": "npm install",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "trailingSlash": true,
  "rewrites": [
    { "source": "/articles/:id", "destination": "/articles/[id]" },
    { "source": "/awareness/:id", "destination": "/awareness/[id]" }
  ],
  "routes": [
    {
      "src": "^/auth/login(?:/)?$",
      "dest": "/auth/login.html"
    },
    {
      "src": "^/auth/register(?:/)?$",
      "dest": "/auth/register.html"
    },
    {
      "src": "^/auth/registration-success(?:/)?$",
      "dest": "/auth/registration-success.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/articles/([^/]+)(?:/)?$",
      "dest": "/articles/[id].html?id=$1"
    },
    {
      "src": "^/awareness/([^/]+)(?:/)?$",
      "dest": "/awareness/[id].html?id=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 